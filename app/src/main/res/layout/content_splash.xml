<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_splash"
    android:orientation="vertical"
    android:background="@color/colorLightPrimary"
    android:weightSum="1"
    android:gravity="center"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.edu.ifce.engcomp.francis.diversidade.activities.SplashActivity"
    tools:showIn="@layout/activity_splash">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/splash_imageView"
        android:src="@drawable/ic_launcher"
        android:contentDescription="splash_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/title_splash"
        android:id="@+id/diversidade_title_textView"
        android:textSize="40sp"
        android:layout_marginTop="5dp"
        android:textColor="#ffffffff"
        android:textStyle="bold" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/slogan_splash"
        android:id="@+id/diversidade_slogan_textView"
        android:layout_marginTop="5dp"
        android:textSize="23dp"
        android:textColor="#ffffffff"
        android:gravity="center"/>

    </LinearLayout>
